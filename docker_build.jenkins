pipeline {
    agent any
    stages {
        stage("Build") {
            steps {
                echo " ============== Start building image =================="
                sh 'docker build -t demoapp:0.0.1 .'
                echo " ============== Run container =================="
                sh 'docker run -p 8888:8080 --name demo demoapp:0.0.1'
            }
        }
    }
}